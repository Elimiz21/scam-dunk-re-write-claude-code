# Database (PostgreSQL/Supabase)
# For Supabase, use the connection string from your project settings
DATABASE_URL="postgresql://user:password@host:5432/database"
DIRECT_URL="postgresql://user:password@host:5432/database"

# NextAuth
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# Email (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your-resend-api-key"
EMAIL_FROM="ScamDunk <noreply@yourdomain.com>"
# Admin email for system alerts (API failures, etc.)
ADMIN_ALERT_EMAIL="admin@yourdomain.com"
# Inbound email webhook secret (for receiving emails at support@scamdunk.com)
# Generate with: openssl rand -hex 32
INBOUND_EMAIL_WEBHOOK_SECRET="your-inbound-webhook-secret"

# Cloudflare Turnstile (CAPTCHA)
# Get keys from: https://dash.cloudflare.com/?to=/:account/turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-turnstile-site-key"
TURNSTILE_SECRET_KEY="your-turnstile-secret-key"

# OpenAI (for narrative generation)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"

# Financial Modeling Prep (PRIMARY - for real market data)
# Get API key from: https://site.financialmodelingprep.com/developer/docs
# Starter plan ($29/mo): 300 requests/min, 5 years historical data
FMP_API_KEY="your-fmp-api-key"

# Alpha Vantage (LEGACY - kept for backward compatibility)
# Get free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-api-key"

# OTC Markets (optional - free public API used by default)
# Only needed if you have a paid OTC Markets API subscription
# Free tier uses backend.otcmarkets.com public endpoints for Caveat Emptor, tier, shell risk
OTC_MARKETS_API_KEY=""

# FINRA BrokerCheck (optional - free public API used by default)
# Only needed if you have an official FINRA API Developer Center subscription
# Free tier uses api.brokercheck.finra.org for firm/individual disclosures
FINRA_API_KEY=""

# Python AI Backend (for full ML models: Random Forest, LSTM, Anomaly Detection)
# Deploy the python_ai module and set the URL here
# Local development: http://localhost:8000
# Production: Your deployed Python API URL
AI_BACKEND_URL="http://localhost:8000"

# Stripe Billing (optional - uses stubs if not configured)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PRICE_PAID_PLAN_ID="price_your-stripe-price-id"

# Plan Limits (configurable)
FREE_CHECKS_PER_MONTH="5"
PAID_CHECKS_PER_MONTH="200"

# Upstash Redis (for rate limiting)
# Get URL and token from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Sentry (for error monitoring)
# Get DSN from: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Supabase (optional - for direct access)
NEXT_PUBLIC_SUPABASE_URL="https://xxx.supabase.co"
